<p id="notice"><%= notice %></p>

<h1 class="white">Courses</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr class="warning">
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Description</th>
      <th>Instructor</th>
      <th>Rating</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr class="info">
        <td><%= course.name %></td>
        <td><%= number_to_currency course.price %></td>
        <td><%= course.quantity %></td>
        <td><%= course.description %></td>
        <td><%= course.instructor %></td>
        <td><%= course.rating %></td>
        <td><%= course.category.name %></td>
        <td><%= link_to 'Show', course, class: "btn btn-info" %></td>
        <% if can? :update, course %>
          <td><%= link_to 'Edit', edit_course_path(course), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Course %>
  <%= link_to 'New Course', new_course_path, class: "btn btn-success" %>
<% end %>
<br>
