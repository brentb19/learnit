<div class="row">
  <div class="jumbotron">
    <h2>Log in</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Enter your login details below</h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, placeholder: "Enter your email address", class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, placeholder: "Enter your password", class: "form-control", autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              Remember Me
              <%= f.check_box :remember_me, class: "form-control" %>
            </div>
          <% end %>

            <%= f.submit "Log in",:class=>'btn btn-success' %>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
