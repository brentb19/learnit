<div class="row">
  <div class="jumbotron">
    <h2>Sign Up</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Fill out the form below</h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.text_field :name, placeholder: "Enter your name", class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, placeholder: "Enter your email address", class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="form-group">
            <%= f.hidden_field :role, value: "guest" %>
        </div>

          <div class="form-group">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, placeholder: "Enter a password", class: "form-control", autocomplete: "new-password" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, placeholder: "Enter you password again", class: "form-control", autocomplete: "new-password" %>
          </div>
          <br>
          <%= f.submit "Sign up",:class =>'btn btn-primary' %>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>




